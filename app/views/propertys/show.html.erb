<div class="container-fluid">
<h5><%= link_to "Retour", propertys_path %> </h5>
</div>
<div class="container-xl">
<div class="row">
    <div class="col">
        <div class="zoom">
            <%= image_tag "room.jpg", id: "images" %>
            <%= image_tag "room2.jpg", id: "images" %>
            <%= image_tag "room3.jpg", id: "images" %> 
            <%= image_tag "room4.jpg", id: "images" %>
            <%= image_tag "room5.jpg", id: "images" %>
        </div>
    </div>
    <div class="col" style="border: 3px solid #78788c;">
        <p><strong>Pièces: </strong><%= @property.room %></p>
        <p><%= @property.metre %> <strong>m²</strong></p>
        <p><strong>Ville: </strong><%= @property.city %></p>
        <p><strong>Prix: </strong><%= @property.price %><strong> €</strong></p>
        <p><strong>Reférence de l'annonce: </strong><%= @property.ref %></p>
    </div>
  </div>

</div>